<Window x:Class="PTL.View.OverlayWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				mc:Ignorable="d"
				Title="Window Preview"
				ShowInTaskbar="False"
				Topmost="True"
				AllowsTransparency="True"
				Background="Transparent"
				WindowStyle="None">
	<Border BorderBrush="Cyan"
					BorderThickness="{Binding st.Border_Overlay, FallbackValue=1}">
		<Border.Background>
			<SolidColorBrush Color="Black"
											 Opacity="{Binding st.Opacity_Overlay, FallbackValue=0.4}"></SolidColorBrush>
		</Border.Background>
	</Border>
</Window>
